<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context=".profile.view_profile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circle_person"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Profile"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:layout_marginTop="13dp"
                            android:layout_marginLeft="5dp"/>

                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/card_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Details"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/pbold"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Type: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[User Type]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />


                    <TextView
                        android:id="@+id/tvFullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Name]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvEditName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap here to edit fullname."
                        android:textColor="@color/green"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibolditalic"
                        android:layout_marginHorizontal="15dp" />




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Household Type: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvHouseholdType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[User Type]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvEstablishmentTypeL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Establishment Type: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvEstablishmentType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Establishment Type]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Barangay: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvBarangay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Barangay]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvEditBarangay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap here to edit barangay."
                        android:textColor="@color/green"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibolditalic"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Location]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvEditLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap here to edit location."
                        android:textColor="@color/green"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibolditalic"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Number]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvEditNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap here to edit number."
                        android:textColor="@color/green"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibolditalic"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Email]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvEditEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap here to edit location."
                        android:textColor="@color/green"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibolditalic"
                        android:layout_marginHorizontal="15dp" />




                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">



            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go Back"
                android:fontFamily="@font/pmedium"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:padding="10dp"
                app:backgroundTint="@color/green"
                app:cornerRadius="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="50dp" />


        </LinearLayout>


    </ScrollView>


</FrameLayout>
