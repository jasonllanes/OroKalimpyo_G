<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".redeem.points">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/points"
                android:backgroundTint="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/pbold"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView
                android:id="@+id/cPoints"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:backgroundTint="@color/green"
                android:layout_margin="10dp"
                android:orientation="vertical"
                app:cardCornerRadius="30dp"
                card_view:cardElevation="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="@drawable/card_gradient" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Points:"
                            android:textColor="@color/green"
                            android:textSize="25sp"
                            android:fontFamily="@font/pregular" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="10 pts"

                            android:textSize="30sp"
                            android:fontFamily="@font/pbold"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:background="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Earn more points by contributing!"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"
                            android:fontFamily="@font/pregular"
                            android:textColor="@color/green" />
                    </LinearLayout>
                </FrameLayout>

            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:id="@+id/llContributions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp"
                    card_view:cardElevation="5dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/green">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@drawable/card_gradient_1" />
                    </FrameLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvResidual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="0 kg"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Residual"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:fontFamily="@font/pbolditalic"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp"
                    card_view:cardElevation="5dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvRecyclable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="0 kg"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:textColor="@color/green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Recyclable"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:fontFamily="@font/pbolditalic"
                            android:textColor="@color/green" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp"
                    card_view:cardElevation="5dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/green">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@drawable/card_gradient_1" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvSpecialWaste"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="0 kg"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Special Waste"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:fontFamily="@font/pbolditalic"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp"
                    card_view:cardElevation="5dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvBiodegradable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="0 kg"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:textColor="@color/green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Recyclable"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:fontFamily="@font/pbolditalic"
                            android:textColor="@color/green" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>



                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@color/red"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/green" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pbold"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="HOW TO REDEEM?"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            android:layout_marginTop="25dp"
                            android:layout_marginHorizontal="10dp"
                            android:text="@string/how_to_redeem"
                            android:textSize="12sp"
                            android:fontFamily="@font/pmedium"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </FrameLayout>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/green"
                android:layout_margin="10dp"
                android:orientation="vertical"
                app:cardCornerRadius="20dp"
                card_view:cardElevation="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@color/white"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/white" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Redeemable Rewards"
                            android:textSize="14sp"
                            android:fontFamily="@font/pmedium"
                            android:textColor="@color/green" />
                    </LinearLayout>
                </FrameLayout>

            </androidx.cardview.widget.CardView>







        </LinearLayout>



    </ScrollView>





</FrameLayout>