<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".authentication.consolidator_sign_up_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/back"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Sign Up"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:fontFamily="@font/pbold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollIndicators="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="Second Step"
                    android:textColor="@color/green"
                    android:textSize="25sp"
                    android:fontFamily="@font/pbold"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Name of Waste Consolidator:"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="@font/pbold"
                            android:layout_marginLeft="5dp"/>

                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Please input the name here..."
                            android:textColorHint="@color/grey"
                            android:padding="15dp"
                            android:background="@drawable/edit_text_layout"
                            android:inputType="text"
                            android:textColor="@color/green"
                            android:layout_marginHorizontal="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="User Type:"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:layout_marginTop="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_layout"
                            android:padding="2dp"
                            android:layout_marginHorizontal="10dp">
                            <com.jaredrummler.materialspinner.MaterialSpinner
                                android:id="@+id/sUserType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:ms_padding_left="10dp"
                                android:textSize="17dp"
                                android:gravity="left"
                                android:textColorHint="@color/grey"
                                app:ms_hint_color="@color/grey"
                                app:ms_arrow_tint="@color/black"
                                android:textColor="@color/green" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Contact Person: "
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:layout_marginTop="15dp" />


                        <EditText
                            android:id="@+id/etContactPerson"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name of contact person..."
                            android:textColorHint="@color/grey"
                            android:drawablePadding="10dp"
                            android:padding="15dp"
                            android:background="@drawable/edit_text_layout"
                            android:inputType="text"
                            android:textColor="@color/green"
                            android:layout_marginHorizontal="10dp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Contact Number:"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:layout_marginTop="15dp" />

                        <EditText
                            android:id="@+id/etNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="09*******"
                            android:textColorHint="@color/grey"
                            android:padding="15dp"
                            android:background="@drawable/edit_text_layout"
                            android:inputType="number"
                            android:textColor="@color/green"
                            android:layout_marginHorizontal="10dp"/>


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="NEXT >"
                            android:fontFamily="@font/pbold"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:padding="10dp"
                            app:backgroundTint="@color/green"
                            app:cornerRadius="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="20dp"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>




    </LinearLayout>

</LinearLayout>