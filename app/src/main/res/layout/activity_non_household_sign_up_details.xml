<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".authentication.non_household_sign_up_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:backgroundTint="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/pbold"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollIndicators="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="Second Step"
                    android:textColor="@color/green"
                    android:textSize="25sp"
                    android:fontFamily="@font/pbold"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Type of Establishment:"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:layout_marginTop="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_layout"
                            android:padding="2dp"
                            android:layout_marginHorizontal="10dp">
                            <com.jaredrummler.materialspinner.MaterialSpinner
                                android:id="@+id/sEstablishment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:ms_padding_left="10dp"
                                android:textSize="17dp"
                                android:gravity="left"
                                android:textColorHint="@color/grey"
                                app:ms_hint_color="@color/grey"
                                app:ms_arrow_tint="@color/black"
                                android:textColor="@color/green" />
                        </LinearLayout>


                        <EditText
                            android:id="@+id/etEstablishmentOthers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Please specify..."
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:textColorHint="@color/grey"
                            android:background="@drawable/edit_text_layout"
                            android:padding="15dp"
                            android:backgroundTint="@color/green"
                            android:inputType="text"
                            android:textColor="@color/green"
                            android:layout_marginHorizontal="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Name of Establishment:"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:layout_marginTop="15dp"/>

                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Input the name here..."
                            android:textColorHint="@color/grey"
                            android:padding="15dp"
                            android:background="@drawable/edit_text_layout"
                            android:inputType="text"
                            android:textColor="@color/green"
                            android:layout_marginHorizontal="10dp"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Barangay:"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:layout_marginTop="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_layout"
                            android:padding="2dp"
                            android:layout_marginHorizontal="10dp">
                            <com.jaredrummler.materialspinner.MaterialSpinner
                                android:id="@+id/sBarangay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:ms_padding_left="10dp"
                                android:textSize="17dp"
                                android:gravity="left"
                                android:textColorHint="@color/grey"
                                app:ms_hint_color="@color/grey"
                                app:ms_arrow_tint="@color/black"
                                android:textColor="@color/green" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Location: "
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:layout_marginTop="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:text="Please be at your establishment while doing this."
                            android:textColor="@color/green"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_semibolditalic"
                            android:layout_marginLeft="5dp"/>

                        <EditText
                            android:id="@+id/etLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tap to get location..."
                            android:text="0.00,0.00"
                            android:clickable="false"
                            android:textColorHint="@color/grey"
                            android:drawablePadding="10dp"
                            android:padding="15dp"
                            android:background="@drawable/edit_text_layout"
                            android:inputType="numberDecimal"
                            android:textColor="@color/green"
                            android:layout_marginHorizontal="10dp"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:text="(You can edit this later)"
                            android:textColor="@color/red"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/pbolditalic"
                            android:layout_marginLeft="5dp"/>

                        <ProgressBar
                            android:id="@+id/pbLocationLoading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:visibility="gone"
                            android:indeterminateTint="@color/green" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Get Location"
                            android:fontFamily="@font/pbold"
                            android:textSize="15sp"
                            android:drawableLeft="@drawable/gps"
                            android:drawableTint="@color/white"
                            android:textColor="@color/white"
                            android:padding="10dp"
                            app:backgroundTint="@color/green"
                            app:cornerRadius="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="50dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Contact Number:"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:layout_marginTop="15dp" />

                        <EditText
                            android:id="@+id/etNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="09*******"
                            android:maxLength="11"
                            android:textColorHint="@color/grey"
                            android:padding="15dp"
                            android:background="@drawable/edit_text_layout"
                            android:inputType="number"
                            android:textColor="@color/green"
                            android:layout_marginHorizontal="10dp"/>


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="NEXT >"
                            android:fontFamily="@font/pbold"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:padding="10dp"
                            app:backgroundTint="@color/green"
                            app:cornerRadius="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="20dp"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>




    </LinearLayout>


</LinearLayout>