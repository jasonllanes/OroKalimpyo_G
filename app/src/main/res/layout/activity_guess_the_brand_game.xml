<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".home.guess_the_brand_game">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:elevation="10dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:lottie_rawRes="@raw/lottie_trash"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <!-- Name TextView -->
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to..."
                android:textSize="15sp"
                android:fontFamily="@font/pregular"
                android:textColor="@color/black" />

            <!-- View Profile TextView -->
            <TextView
                android:id="@+id/viewProfileTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guess the brand!"
                android:textSize="25sp"
                android:fontFamily="@font/pregular"
                android:textColor="@color/green" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:text="Accomplish the each level to gain a star(â˜…) by capturing an image that is the same as the logo/brand shown in each level."
                android:textSize="15sp"
                android:fontFamily="@font/pbolditalic"
                android:textColor="@color/green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Total Stars Collected:"
                android:textSize="15sp"
                android:fontFamily="@font/pregular"
                android:textColor="@color/green" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lStar1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"

                    app:lottie_rawRes="@raw/lottie_star"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true" />
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lStar2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:lottie_rawRes="@raw/lottie_star_default"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true" />
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lStar3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:lottie_rawRes="@raw/lottie_star_default"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true" />
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lStar4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:lottie_rawRes="@raw/lottie_star_default"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true" />
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lStar5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:lottie_rawRes="@raw/lottie_star_default"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnWaste1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/green"
                    android:fontFamily="@font/pbold"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:text="Brand 1"
                    android:textColor="@color/white"
                    app:cornerRadius="15dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnWaste2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/green"
                    android:fontFamily="@font/pbold"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:text="Brand 2"
                    android:textColor="@color/white"
                    app:cornerRadius="15dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnWaste3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/green"
                    android:fontFamily="@font/pbold"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:text="Brand 3"
                    android:textColor="@color/white"
                    app:cornerRadius="15dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnWaste4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/green"
                    android:fontFamily="@font/pbold"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:text="Brand 4"
                    android:textColor="@color/white"
                    app:cornerRadius="15dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnWaste5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/green"
                    android:fontFamily="@font/pbold"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:text="Brand 5"
                    android:textColor="@color/white"
                    app:cornerRadius="15dp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>






</LinearLayout>